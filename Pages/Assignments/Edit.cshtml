@page
@model AssignmentTracker.Pages.Assignments.EditModel

@{
 
}

<br/>
<h2>Edit Assignment</h2>
@if (Model.errorMessage.Length > 0)
{
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>@Model.errorMessage</strong>
    <strong>HERE</strong>
    <button type="button" class="btn-close" data-bd-dismiss="alert" aria-label="close"></button>
</div>
}
<form method="POST">
    <input type="hidden" name="id" value="@Model.assignmentDetails.id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Title</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="title" value="@Model.assignmentDetails.title">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.assignmentDetails.description">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Deadline</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="deadline" placeholder="June 24, 2028"value='@(Model.assignmentDetails.deadline?.ToString("MMMM dd, yyyy"))'>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Course</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="course" value="@Model.assignmentDetails.course">
        </div>
    </div>
    
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Instructor Email</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" name="instructor_email" value="@Model.assignmentDetails.instructor_email">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>